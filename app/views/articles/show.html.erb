<div class="large-container center-block">
    <h1><%= @article.title %></h1>
    <div>
        <p>Escrito por: <strong><%= @article.user.email %></strong></p>
    </div>
    <div>
        Categorias: 
        <% @article.categories.each do |category| %>
            <strong><%= category.title %></strong>
        <% end %>
    </div>
    <div>
        <%= @article.content %>
    </div>

    <div>
        <%= link_to 'Eliminar Articulo', @article, method: :delete %>
    </div>
</div>